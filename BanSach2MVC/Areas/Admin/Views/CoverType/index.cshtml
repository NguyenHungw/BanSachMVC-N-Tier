@model IEnumerable<Bans.Model.CoverType>


<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h1> CoverType List </h1>
        </div>

        <div class="col-6 text-end">

            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i>Create New CoverType
            </a>
            <br />
            <br />
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
        <th>CoverType Name</th>
@*          <th>Display Order</th>
 *@        <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
              @*       <td>@item.DisplayOrder</td> *@
                    <td>
                        <div>
                            <a class="btn btn-primary" asp-controller="CoverType" asp-action="edit" asp-route-id=@item.ID> Edit</a>

                            <a class="btn btn-primary" asp-controller="CoverType" asp-action="delete" asp-route-id=@item.ID> Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>