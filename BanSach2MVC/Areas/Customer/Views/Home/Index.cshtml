@model IEnumerable<Bans.Model.Product>
<div class="row pd-3">
    @foreach(var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba;border-radius:5px">
                    <div class="card">
                        <img src="@item.ImageURL.Replace("\\", "/")" />
                        @*  <img src="/images/products/ad441b61-0d99-49cf-b018-c22b739996de.jpg" /> *@
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@item.Name</p>
                            <p class="card-title text-secondary">@item.Author</p>

                        </div>
                        <p>List Price: <strike>@item.Price100.ToString("0.00")</strike></p>
                        <p>List 50: <strike>@item.Price50.ToString("0.00")</strike></p>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@item.Id">Details</a>
                    </div>
                
            </div>
                
        </div>
    
</div>
}